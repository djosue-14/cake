@model List<InmobiliariaViewModels.Lotificadora.VistaViaticosViewModels>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col s12 m12 l12">        
        <div class="page-header">
            <h4 id="tables" class="text-center blue-text text-darken-1">Tabla Viaticos</h4>
        </div>
        <table class="striped responsive-table">
            <thead>
                <tr>
                    <th scope="col">Fecha</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Lotificadora</th>
                    <th scope="col">Empleado</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td scope="col">@item.fecha.ToString("dd/MM/yyyy")</td>
                        <td scope="col">@item.cantidad</td>
                        <td scope="col">@item.descripcion</td>
                        <td scope="col">@item.lotificadora</td>
                        <td scope="col">@item.nombre @item.apellido</td>
                        <td>
                            <a href="@Url.Action("Delete", "Viaticos")/@item.id" class="btn-small red"><i class="fas fa-trash"></i> Eliminar</a>
                            <a href="@Url.Action("Edit", "Viaticos")/@item.id" class="btn-small orange"><i class="fas fa-edit"></i> Modificar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
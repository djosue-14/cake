@model InmobiliariaViewModels.Venta.VentaViewModels

<h5>@Model.Cliente.nombre @Model.Cliente.apellido</h5>
<h5>@Model.Cliente.direccion</h5>
<hr />

<h5>@Model.Empleado.nombre_e @Model.Empleado.apellido_e</h5>
<hr />

<div class="row">
    <div class="col s12 m12 l12">
        <h4 id="tables" class="text-center blue-text text-darken-1">Tabla Lotes</h4>
        <table class="striped responsive-table">
            <thead>
                <tr>
                    <th scope="col">Numero de lote</th>
                    <th scope="col">Largo (metraje)</th>
                    <th scope="col">Ancho (metraje)</th>
                    <th scope="col">Metraje cuadrado</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Manzana</th>
                    <th scope="col">Lotificadora</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Lotes)
                {
                    <tr>
                        <td scope="col">@item.numero </td>
                        <td scope="col">@item.largo </td>
                        <td scope="col">@item.ancho </td>
                        <td scope="col">@item.mts_cuadrados </td>
                        <td scope="col">@item.precio </td>
                        <td scope="col">@item.manzana </td>
                        <td scope="col">@item.lotificadora </td>
                        <td scope="col">@item.estado </td>

                        <td scope="col">
                            @using (Html.BeginForm("CuotasVenta", "Venta", FormMethod.Post))
                            {
                                <input type="hidden" name="ClienteId" id="ClienteId" value="@Model.Cliente.id" />
                                <input type="hidden" name="EmpIngresoId" id="EmpIngresoId" value="@Model.Empleado.id" />
                                <input type="hidden" name="LoteId" id="LoteId" value="@item.id" />
                                <input type="submit" class="btn light-blue" value="Agregar" />
                            }
                            @*<a href="@Url.Action("CuotasVenta", "Venta")/@item.id"><i class="fas fa-eye"></i> Ver</a>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/js/materialscript.js")
}

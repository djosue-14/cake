@model List<InmobiliariaViewModels.Clientes.ClientesPagarViewModels>

<div class="row">
    <div class="col s12 m12 l12">
        <h4 id="tables" class="text-center blue-text text-darken-1">Clientes</h4>
        <table class="striped responsive-table">
            <thead>
                <tr>
                    <th scope="col">Nombre del Cliente</th>
                    <th scope="col">Numero de venta</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td scope="col">@item.nombre @item.apellido</td>
                        <td scope="col">00000 @item.idventa</td>
                        <td>
                            <a href="@Url.Action("Pagar", "Pagos")/@item.idventa" class="btn-small red"><i class="fas fa-trash"></i>Pagar</a>
                        </td>                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
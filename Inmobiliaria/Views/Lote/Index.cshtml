@model List<InmobiliariaViewModels.Lotes.LoteViewModels>
@{
    ViewBag.Title = "Index";
}
@using (Html.BeginForm("FindLoti", "Lote"))
{
    
    <div class="input-field col s12 m4 l5">
        <select name="lotificadora" id="lotificadora">
            <option value="1">Fraccionamiento America</option>
            <option value="2">Fraccionamiento El Refugio</option>
            <option value="3">Lotificacion Las Perlas</option>
            <option value="4">Condado San Rafael</option>
        </select>
        <label for="lotificadora">Lotificadora</label>
</div>
    <input type="submit" class="btn blue" value="buscar" />
}


    <div class="row">
        <div class="col s12 m12 l12">
            <h4 id="tables" class="text-center blue-text text-darken-1">Tabla Lotes</h4>
            <table class="striped responsive-table">
                <thead>
                    <tr>
                        <th scope="col">Numero de lote</th>
                        <th scope="col">Largo (metraje)</th>
                        <th scope="col">Ancho (metraje)</th>
                        <th scope="col">Metraje cuadrado</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Manzana</th>
                        <th scope="col">Lotificadora</th>
                        <th scope="col">Estado</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td scope="col">@item.numero </td>
                            <td scope="col">@item.largo </td>
                            <td scope="col">@item.ancho </td>
                            <td scope="col">@item.mts_cuadrados </td>
                            <td scope="col">@item.precio </td>
                            <td scope="col">@item.manzana </td>
                            <td scope="col">@item.lotificadora </td>
                            <td scope="col">@item.estado </td>

                            <td scope="col">
                                <a href="@Url.Action("GetForId", "Lote")/@item.id" class="btn-small blue-grey"><i class="fas fa-eye"></i> Ver</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/Scripts/js/materialscript.js")
    }
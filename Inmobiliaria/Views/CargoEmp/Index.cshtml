@model List<InmobiliariaViewModels.Empleados.CargoEmpViewModels>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col s12 m12 l12">

        <div class="page-header">
            <h4 id="tables" class="text-center blue-text text-darken-1">Tabla Cargo de Empleados</h4>
        </div>

        <table class="striped responsive-table">
            <thead>
                <tr>
                    <th scope="col">Nombre Cargo</th>
                    <th scope="col">Sueldo</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td scope="col">@item.nombrecargo</td>
                        <td scope="col">@item.sueldo</td>

                        <td>
                            <a href="@Url.Action("Delete", "CargoEmp")/@item.id" class="btn-small red"><i class="fas fa-trash"></i> Eliminar</a>
                            <a href="@Url.Action("Edit", "CargoEmp")/@item.id" class="btn-small orange"><i class="fas fa-edit"></i> Modificar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
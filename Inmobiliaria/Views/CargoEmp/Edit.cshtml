@model InmobiliariaViewModels.Empleados.CargoEmpViewModels
@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col s12 m12 l12">
        <h2 class="blue-text text-darken-1">Editar Cargo</h2>
        @using (Html.BeginForm("Edit", "CargoEmp", FormMethod.Post))
        {
            <div class="input-field col s12 m4 l5">
                <label for="Nombre">Nombre</label>
                <input type="text" id="nombrecargo" name="nombrecargo" class="validate" value="@Model.nombrecargo">
            </div>
            <div class="input-field col s12 m4 l5">
                <label for="Sueldo">Sueldo</label>
                <input type="text" id="sueldo" name="sueldo" class="validate" value="@Model.sueldo">
            </div>

            <div class="col s12 m4 l5">
                <button type="submit" class="btn light-blue">Actualizar</button>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/js/materialscript.js")
}
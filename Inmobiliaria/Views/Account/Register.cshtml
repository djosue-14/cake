@model Inmobiliaria.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}

<h4 class="light-blue-text text-accent-3">@ViewBag.Title</h4>
<div class="row">
    <div class="col s12 m6">
        <div class="card">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="card-content">
                @Html.ValidationSummary("", new { @class = "red-text" })
                <div class="row">
                    <div class="input-field col s12 m12">
                        @Html.TextBoxFor(m => m.Email, new { @class = "validate" })
                        @Html.LabelFor(m => m.Email, new { })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "red-text" })
                    </div>
                    <div class="input-field col s12 m12">
                        @Html.PasswordFor(m => m.Password, new { @class = "validate" })
                        @Html.LabelFor(m => m.Password, new { })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "red-text" })
                    </div>
                    <div class="input-field col s12 m12">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "validate" })
                        @Html.LabelFor(m => m.ConfirmPassword, new { })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "red-text" })
                    </div>
                </div>

            </div>
            <div class="card-action">
                <div class="row">
                    <div class="col s12 m6">
                        <input type="submit" class="btn light-blue accent-3" value="Registrarse" />
                    </div>
                </div>
            </div>
        }
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

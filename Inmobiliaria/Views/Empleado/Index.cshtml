@model List<InmobiliariaViewModels.Empleados.EmpleadosIngresoViewModels>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col s12 m12 l12">
    <h4 id="tables" class="text-center blue-text text-darken-1">Tabla Empleados</h4>

        <table class="striped responsive-table">
            <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Dpi</th>
                    <th scope="col">Direccion</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">Sexo</th>
                    <th scope="col">Fecha Nac</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td scope="col">@item.nombre_e</td>
                        <td scope="col">@item.apellido_e</td>
                        <td scope="col">@item.dpi_e</td>
                        <td scope="col">@item.dire_e</td>
                        <td scope="col">@item.tel_e</td>
                        <td scope="col">@item.sexo_e</td>
                        <td scope="col">@item.fecha_nac_e.ToString("dd/MM/yyyy")</td>

                        <td>
                            <a href="@Url.Action("GetForId", "Empleado")/@item.id" class="btn-small green"><i class="fas fa-eye"></i> Ver</a>
                        </td>
                    </tr>
                }
            </tbody>            
        </table>
    </div>
</div>
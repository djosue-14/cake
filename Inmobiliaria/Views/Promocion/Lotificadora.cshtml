@model IEnumerable<InmobiliariaViewModels.PromocionViewModels>
@{
    ViewBag.Title = "Lotificadora";
}

<div class="row">
    <div class="col s12 m12 l12">

        <div class="page-header">
            <h4 id="tables" class="text-center">Promociones Por Lotificadora</h4>
        </div>

        <table class="striped responsive-table">
            <thead>
                <tr>
                    <th scope="col">Monto</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Fecha Inicio</th>
                    <th scope="col">Fecha Fin</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td scope="col">@item.Cantidad</td>
                        <td scope="col">@item.Descripcion</td>
                        <td scope="col">@item.FechaInicio.ToString("dd-MM-yyyy")</td>
                        <td scope="col">@item.FechaFin.ToString("dd-MM-yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
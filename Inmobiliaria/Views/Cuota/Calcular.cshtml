
@{
    ViewBag.Title = "Calcular";
}

<h4>Calcular Cuota Por Mes</h4>
<div class="row">
    <div class="col s12 m5 l4">
            @using (Html.BeginForm("DetailMonths", "Cuota", FormMethod.Post))
            {
                <div class="row">
                    <div class="input-field col s12">
                        <input type="text" name="cantidad" class="validate" id="cantidad" required>
                        <label for="cantidad">Cantidad</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input type="text" name="enganche" class="validate" id="enganche" required>
                        <label for="enganche">Enganche</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <select name="tiempo" id="tiempo">
                            <option value="" disabled selected>Elige tu opcion</option>
                            <option value="12">1 Años/12 Meses</option>
                            <option value="24">2 Años/24 Meses</option>
                            <option value="36">3 Años/36 Meses</option>
                            <option value="48">4 Años/48 Meses</option>
                            <option value="60">5 Años/60 Meses</option>
                            <option value="72">6 Años/72 Meses</option>
                            <option value="84">7 Años/84 Meses</option>
                            <option value="96">8 Años/96 Meses</option>
                            <option value="108">9 Años/108 Meses</option>
                            <option value="120">10 Años/120 Meses</option>
                        </select>
                        <label for="tiempo">Tiempo de Financiamiento</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <select name="interes" id="interes">
                            <option value="" disabled selected>Elige tu opcion</option>
                            <option value="0.13">Perlas 13%</option>
                            <option value="0.12">Refugio 12%</option>
                            <option value="0.18">Condado 18%</option>
                            <option value="0.10">America 10%</option>
                        </select>
                        <label for="interes">Interes</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <button type="submit" class="btn light-blue accent-3">Calcular</button>
                    </div>
                </div>
            }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/js/materialscript.js")
}
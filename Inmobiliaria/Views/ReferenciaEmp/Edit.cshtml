@model InmobiliariaViewModels.Empleados.ReferenciaEmpViewModels
@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-lg-3">
        <div class="bs-component">
            @using (Html.BeginForm("Edit", "ReferenciaEmp", FormMethod.Post))
            {
                <fieldset>
                    <legend>Modificar</legend>
                    <div class="form-group">
                        <label class="col-form-label" for="Nombre">Nombre</label>
                        <input type="text" name="nombre" class="form-control" value="@Model.nombre">
                    </div>
                    <div class="form-group">
                        <label class="col-form-label" for="Apellido">Apellido</label>
                        <input type="text" name="apellido" class="form-control" value="@Model.apellido">
                    </div>
                    <div class="form-group">
                        <label class="col-form-label" for="Telefono">Telefono</label>
                        <input type="text" name="tel" class="form-control" value="@Model.tel">
                    </div>
                    <div class="form-group">
                        <label class="col-form-label" for="Direccion">Direccion</label>
                        <input type="text" name="direccion" class="form-control" value="@Model.direccion">
                    </div>
                    <button type="submit" class="btn btn-primary">Aceptar</button>
                </fieldset>
            }
        </div>
    </div>
</div>
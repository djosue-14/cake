@model InmobiliariaViewModels.Clientes.ClienteInsertViewModels
@{
    ViewBag.Title = "GetForId";
}

<div class="row">
    <div class="col s12 m12 l12">
        <div class="row">
            <h2 class="blue-text text-darken-1">Datos del Cliente</h2>
            <ul>
                <li><b>Nombre: </b><i>@Model.nombre @Model.apellido</i></li>
                <li><b>Fecha de Nacimiento: </b> <i>@Model.fecha.ToString("dd/MM/yyyy")</i></li>
                <li><b>DPI: </b><i>@Model.dpi</i></li>
                <li><b>Telefono: </b><i>@Model.telefono</i></li>
                <li><b>Direccion: </b><i>@Model.direccion</i></li>
            </ul>
            <div class="col s12">
                <a href="@Url.Action("Delete", "Cliente")/@Model.id" class="btn-small red"><i class="fas fa-trash"></i> Eliminar</a>
                <a href="@Url.Action("Edit", "Cliente")/@Model.id" class="btn-small orange"><i class="fas fa-edit"></i> Editar</a>
                <a href="@Url.Action("EnviarId", "Referencia")/@Model.id" class="btn-small blue"><i class="fas fa-plus"></i> Agregar Referencia</a>
                <a href="@Url.Action("EnviarId", "Beneficiario")/@Model.id" class="btn-small blue"><i class="fas fa-plus"></i> Agregar Beneficiario</a> 
            </div>
        </div>
        <div class="row">
            <h4 class="grey-text text-accent-3">Datos de las Referencias</h4>
                <table class="striped responsive-table">
                    <thead>
                        <tr>
                            <th scope="col">Nombre</th>
                            <th scope="col">Telefono</th>
                            <th scope="col">Direccion</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.referencias)
                        {
                            <tr>
                                <td scope="col">@item.Nombre @item.Apellido</td>
                                <td scope="col">@item.Telefono</td>
                                <td scope="col">@item.Direccion</td>
                                <td>
                                    <a href="@Url.Action("Delete", "Referencia")/@item.Id" class="btn-small red"><i class="fas fa-trash"></i> Eliminar</a>
                                    <a href="@Url.Action("Edit", "Referencia")/@item.Id" class="btn-small orange"><i class="fas fa-edit"></i> Editar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            
        </div>
        @*Start Beneficiario*@
        <div class="row">
            <h4 class="grey-text text-accent-3">Datos del Beneficiario</h4>
            <table class="striped responsive-table">
                <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Telefono</th>
                        <th scope="col">Direccion</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.beneficiario)
            {
                <tr>
                    <td scope="col">@item.Nombre @item.Apellido</td>
                    <td scope="col">@item.Telefono</td>
                    <td scope="col">@item.Direccion</td>
                    <td>
                        <a href="@Url.Action("Delete", "Beneficiario")/@item.Id" class="btn-small red"><i class="fas fa-trash"></i> Eliminar</a>
                        <a href="@Url.Action("Edit", "Beneficiario")/@item.Id" class="btn-small orange"><i class="fas fa-edit"></i> Editar</a>
                    </td>
                </tr>
    }
                </tbody>
            </table>

        </div>


    </div>
</div>